<h1>Add a New Restaurant</h1>

<%= form_with(model: @restaurant, url: restaurants_path) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :address %>
  <%= form.text_field :address %>

  <%= form.label :phone_number %>
  <%= form.text_field :phone_number %>

  <%= form.label :category %>
  <%= form.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>

  <%= form.submit 'Create Restaurant' %>
<% end %>

<%= link_to 'Back to Restaurants', restaurants_path %>